body
    align-items: center
    background-color: #f6f6f6
    display: flex
    justify-content: center
    margin: 16px
    min-height: 100vh

.mtop16
    margin-top: 16px

.box
    background-color: #ffffff
    border-radius: 8px
    border: 1px solid #d6d6d6
    position: relative
    padding: 14px
    width: 500px
    .btn-success
        background-color: #4A1942
        border: 0px
        width: 100%
    .form-control
        &:focus
        &:active
            outline: none
            box-shadow: none
    .inside
        padding: 16px
    .header
        border-radius: 8px 8px 0px 0px
        padding: 16px
        a
            img
                display: block
                margin: 0px auto
                width: 50%
    .footer
        text-align: center
        a
            display: inline-block
            &:last-child
                margin-left: 24px
    .footer_reg
        text-align: center
        
@media only screen and (max-width  720px)
    .box
        width: 88%